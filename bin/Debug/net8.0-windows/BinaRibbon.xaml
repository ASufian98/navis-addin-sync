<RibbonControl xmlns="clr-namespace:Autodesk.Windows;assembly=AdWindows"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               x:Uid="NavisWebAppSync">
    <RibbonControl.Tabs>
        <RibbonTab Id="BinaTab" Title="BINA">
            <RibbonPanel x:Uid="RibbonPanel_Tools">
                <RibbonPanelSource Title="Tools">
                    <NWRibbonButton Id="HelloAcap_Button"
                                   Text="Hello Acap"
                                   ToolTip="Click to say Hello Acap"
                                   Size="Large"
                                   ShowText="True"
                                   ShowImage="True" />
                </RibbonPanelSource>
            </RibbonPanel>
        </RibbonTab>
    </RibbonControl.Tabs>
</RibbonControl>
